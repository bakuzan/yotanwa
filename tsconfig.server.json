{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "target": "es2017",
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server/**/*.ts", "server/**/*.d.ts"]
}
